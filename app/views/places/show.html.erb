<div class="booyah-box col-10 offset-1">

  <h1><%= @place.name %></h1><br />

  <i><%= @place.address %></i>

  <br /><br />

  <p><%= @place.description %></p>



  <% if @place.latitude.present? && @place.longitude.present? %>
   

  <script>

    function initMap() {
      var myLatLng = {lat: <%= @place.latitude %>, lng: <%= @place.longitude %>};

      var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 12,
        center: myLatLng
      });

      var marker = new google.maps.Marker({
        position: myLatLng,
        map: map,
        title: 'Hello World!'
      });
    }
  </script>

  <script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBkaNcX664DX7I3Zx2xWpYwSqQDtN1A9Vk&callback=initMap">
  </script>

  <div id="map"></div>

  <% end %>

  <br />


  <div class="float-right">

    <% if current_user && current_user == @place.user %>

    <%= link_to 'EDIT', edit_place_path(@place), class: 'edit-button' %>

    <%= link_to 'REMOVE', place_path(@place), method: :delete, data: {confirm: 'Are you sure you want to delete this location?'}, class: 'danger-button' %>

    <% end %>

  </div>

</div>

<div class="clear"></div>



<!-- photo block -->
<div class="container-fluid">
  
  <div class="row">
    
    <div class="m-place-box col-xs-10 col-xs-offset-1">
      
      <% if @place.photos.present? %>
       
        <h2 class="m-photo-heading">Photos of <%= @place.name %></h2>
        
        <div class="row">
       
        <% @place.photos.each do |photo| %>
         
          <div class="col-md-6 col-lg-4 m-photo-container">
          
            <%= image_tag photo.picture, :class => 'm-photo-picture' %>
          
            <div class="clear"></div>
          
            <p class="m-photo-caption">
          
              <%= photo.caption %>
          
            </p>
          
          </div>
        
        <% end %>
        
        </div>

      <% else %>
        
        <h2>Add a Photo</h2>
      
      <% end %>

    
      <!-- Button trigger add photo modal -->
      
      <button class="btn btn-primary btn-lg pull-right m-photo-button" data-toggle="modal" data-target="#addPhotoModal">
        
        Add Photo
      
      </button>
    
      <!-- Add Photo Modal -->
      
      <div class="modal fade" id="addPhotoModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        
        <div class="modal-dialog">
          
          <div class="modal-content">
            
            <div class="modal-header">
              
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              
              <h4 class="modal-title" id="myModalLabel">Add Photo of <%= @place.name %></h4>
            
            </div>
            
            <div class="modal-body">
              
              <%= simple_form_for @photo, :url => place_photos_path(@place) do |f| %>
                
                <%= f.input :picture %>
                
                <%= f.input :caption %>
           
            </div>
            
            <div class="modal-footer">
              
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                
                <%= f.submit 'Upload', :class => 'btn btn-primary' %>
             
             <% end %>
           
            </div>
         
          </div>
       
        </div>
      
      </div>
    
    </div>
 
  </div>

</div>

<!-- COMMENT BLOCK -->

<div class="m-place-box col-xs-10 col-xs-offset-1">
  <% if @place.comments.present? %>

    <h2 class="m-comments-heading">Comments for <%= @place.name %></h2>

    <% @place.comments.each do |comment| %>

      <div class="col-md-6">

        <blockquote>

          <p><strong></strong> <%= comment.message %></p>

          <br>

          <% if comment.humanized_rating.present? %>

            <b><strong></strong> <%= comment.humanized_rating %></b>

          <% end %>

          <small><%= comment.user.email %></small>

        </blockquote>

      </div>

    <% end %>

  <% else %>

    <h2>Add a Comment</h2>

  <% end %>

  <!-- Button trigger modal -->
  <button class="btn btn-primary btn-lg pull-right" data-toggle="modal" data-target="#myModal">
    Comment
  </button>

  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

    <div class="modal-dialog">

      <div class="modal-content">

        <div class="modal-header">

          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

          <h4 class="modal-title" id="myModalLabel">Comment on <%= @place.name %></h4>

        </div>

        <div class="modal-body">

          <%= simple_form_for @comment, :url => place_comments_path(@place) do |f| %>

            <%= f.input :message %>

            <%= f.input :rating, :as => :select, :collection => Comment::RATINGS %>

        </div>

        <div class="modal-footer">

          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

            <%= f.submit 'Comment', :class => 'btn btn-primary' %>

          <% end %>

        </div>

      </div>

    </div>

  </div>
  
</div>
