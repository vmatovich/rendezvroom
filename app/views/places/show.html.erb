<div class="booyah-box col-10 offset-1">

  <h1><%= @place.name %></h1><br />

  <i><%= @place.address %></i>

  <br /><br />

  <p><%= @place.description %></p>



  <% if @place.latitude.present? && @place.longitude.present? %>
   

  <script>

    function initMap() {
      var myLatLng = {lat: <%= @place.latitude %>, lng: <%= @place.longitude %>};

      var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 12,
        center: myLatLng
      });

      var marker = new google.maps.Marker({
        position: myLatLng,
        map: map,
        title: 'Hello World!'
      });
    }
  </script>

  <script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBkaNcX664DX7I3Zx2xWpYwSqQDtN1A9Vk&callback=initMap">
  </script>

  <div id="map"></div>

  <% end %>

  <br />


  <div class="float-right">

    <% if current_user && current_user == @place.user %>

    <%= link_to 'EDIT', edit_place_path(@place), class: 'edit-button' %>

    <%= link_to 'REMOVE', place_path(@place), method: :delete, data: {confirm: 'Are you sure you want to delete this location?'}, class: 'danger-button' %>

    <% end %>

    

  </div>

</div>

<div class="clear"></div>

<%= simple_form_for @comment, url: place_comments_path(@place) do |f| %>

  <%= f.input :message %>

  <%= f.input :rating, as: :select, collection: Comment::RATINGS %>

  <%= f.submit "Add a Comment", class: 'ghost-white-button' %>

<% end %>

<h1>Comments</h1>

<% @place.comments.each do |comment| %>

  <div>

    <blockquote>

      <% if comment.humanized_rating.present? %>

        <b><%= comment.humanized_rating %></b> -

      <% end %>

      <%= comment.message %>

      <small><%= comment.user.email %></small>

    </blockquote>

  </div>

<% end %>